defmodule Kirka.Web.Schema
  use Absinthe.Schema

  import_types(Kirka.Web.Schema.Types)

  query do
    field :posts, list_of(:posts) do
      resolve(&Kirka.Web.Posts.PostResolver.all/2)
    end

    field :post, type: :post do
      arg(:id, non_null(:id))
      resolve(&Kirka.Web.Posts.PostResolver.find/2)
    end

    mutation do
      field :create_post, type: :post do
        arg(:title, non_null(:string))
        arg(:body, non_null(:string))
        arg(:user_id, non_null(:id))

        resolve(&Kirka.Web.Posts.PostResolver.create/2)
      end

      field :update_post, type: :post do
        arg(:id, non_null(:id))
        arg(:post, :update_post_params)

        resolve(&Kirka.Web.Posts.PostResolver.update/2)
      end

      field :delete_post, type: :post do
        arg(:id, non_null(:id))
        resolve(&Kirka.Web.Posts.PostResolver.delete/2)
      end
    end
  end
end
